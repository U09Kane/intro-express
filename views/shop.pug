extends layouts/base.pug


block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    if products.length > 0
      .grid
        each product in products
          article.card.product-item
            header.card_header
              h1.product__title #{product.title}
              .card__image
                img(src="https://prodimage.images-bn.com/pimages/9780590353427_p0_v2_s550x406.jpg", alt="book")
              .card__content
                h2.product_price $19.99
                p.product__description A very interesting book about an awesome topic.
              .card__actions
                button.btn Add to Cart
    else
      h1 No Products Found
